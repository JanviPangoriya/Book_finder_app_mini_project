<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activity.BookDescriptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/licontent"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="7.2"
                android:background="@drawable/registerbackground">

                <ImageView
                    android:id="@+id/imgBookImage"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.8"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:padding="8dp"
                        android:text="Subtitle"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtSubtitle"
                        android:layout_marginLeft="6dp"
                        android:padding="5dp"
                        android:text="title"
                        android:textColor="@color/lightBlueGrey"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAuthorname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTitle"
                        android:layout_marginLeft="6dp"
                        android:padding="5dp"
                        android:text="@string/Book_author"
                        android:textColor="@color/lightWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/bookrating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:drawableLeft="@drawable/ic_rating"
                    android:padding="4dp"
                    android:text="4.9"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/licontent"
                android:layout_margin="4dp"
                android:background="@color/darkGrey"/>

            <RelativeLayout
                android:id="@+id/licontent1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/licontent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <TextView
                        android:id="@+id/favourites"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:drawableTop="@drawable/ic_favourites"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="@string/favourites"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtPagecount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_page_count"
                        android:drawablePadding="2dp"
                        android:padding="12dp"
                        android:text="pages"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtLanguage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_lang"
                        android:drawablePadding="2dp"
                        android:padding="12dp"
                        android:text="Lang"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@id/licontent2"
                android:layout_margin="4dp"
                android:background="@color/darkGrey"/>

            <LinearLayout
                android:id="@+id/licontent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/licontent1">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:padding="5dp"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAboutbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:lines="5"
                    android:padding="5dp"
                    android:text=" This is the book description."
                    android:textColor="@color/grey"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/buyView"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="4dp"
                    android:background="@color/darkGrey"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/llBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/priceHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:padding="5dp"
                        android:text="Online Purchase"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=" This book is also avaliable for online purchase. You can buy this book at:"
                    android:textColor="@color/grey"
                    android:textSize="18sp"/>


                <Button
                    android:id="@+id/buyhere"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/darkPink"
                    android:text="BUY HERE"
                    android:onClick="WebBuy"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:shadowColor="@color/darkGrey"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/licontent2"
                android:layout_marginBottom="2dp"
                android:background="@color/darkGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@id/licontent2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="8"
                android:background="#e57373">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="6"
                    android:layout_weight="5">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/publishernamehint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Publisher's Name"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txtPublishername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/publishernamehint"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="_____________"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/publishedatehint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPublishername"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Published date"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txtPublishedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/publishedatehint"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="_____________"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                </LinearLayout>

                <Button
                    android:layout_weight="1.5"
                    android:id="@+id/moreinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/darkPink"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:shadowColor="@color/darkGrey"
                    android:padding="6dp"
                    android:text="More Info"
                    android:onClick="WebInfo"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/darkPink"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:elevation="2dp"
                    android:shadowColor="@color/darkGrey"
                    android:padding="6dp"
                    android:text=" Preview "
                    android:onClick="WebPreview"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
