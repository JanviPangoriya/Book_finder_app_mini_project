<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutUsFragment">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/abhaya_libre"
        android:padding="20dp"
        android:text="BOOKOPEDIA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="About App"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/abhaya_libre"
        android:padding="19dp"
        android:text="It is a multidisciplinary platform to access the books of different genres.This app is easy to use and easy to access.Our app will give readers new ways to show their love for books, review them online, keep track of what they read and of course, discover new books to read."
        android:textAlignment="center"
        android:textSize="23sp" />

</RelativeLayout>